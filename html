                function datecheck(){
                    var dt = new Date();

                    var arrDayStr = ['일','월','화','수','목','금','토'];
                    var str = (dt.getMonth()+1)+'월 '+dt.getDate()+'일 ('+arrDayStr[dt.getDay()]+')';
                    alert("오늘은 "+str+"입니다. 홈페이지를 방문해주셔서 감사합니다.");
                }


                function check1(){
                    var input = confirm("안내사항을 확인하셨나요?");
                    if(input==true){
                        alert("확인해주셔서 감사합니다.");
                        datecheck();
                    }
                    else{
                        alert("안내사항을 확인해주세요");
                        location.href = location.href;
                    }
                }

                
                
                const name = prompt("이름을 입력해주세요");
                alert("안녕하십니까 "+name+" 님\n해당 페이지에 이미지나 색이 다른 문장을 클릭하시면 다양한 정보를 확인하실 수 있습니다.");
                check1();

            </script>
